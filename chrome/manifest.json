{
    "name": "Swag Auth",
    "description": "Login to any swag UI easly.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "webRequest"
    ],
    "options_page": "option/options.html",
    "action": {
        "default_popup": "popup/login.html"
    },
    "icons": {
        "16": "icons/logo.png",
        "48": "icons/logo.png",
        "128": "icons/logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_scripts/auth.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
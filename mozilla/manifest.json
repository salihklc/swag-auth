{
    "manifest_version": 2,
    "name": "Tdesk Auth",
    "version": "1.0",
    "description": "Login to tdesk app easly.",
    "type": "storage",
    "icons": {
        "48": "icons/logo.png"
    },
    "homepage_url": "https://tdesk.trendyol.com",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "salih.kilic@trendyol.com"
        }
    },
    "browser_action": {
        "default_icon": "icons/logo.png",
        "default_title": "Tdesk Auth Helper",
        "default_popup": "popup/login.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "login.js"
            ]
        }
    ]
}